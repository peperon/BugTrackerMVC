@model IEnumerable<BugTracker.Models.UserActivityModel>

@{
    ViewBag.Title = "UsersActivity";
}

@Html.Partial("_ReportsMenu")
<div>
    <h2>Users activity</h2>
    @{
        Html.Kendo().Grid(Model)
            .Name("grid")
            .Resizable(res => res.Columns(true))
            .Columns(column =>
                {
                    column.Bound(user => user.UserName);
                    column.Bound(user => user.Name);
                    column.Bound(user => user.NumberOfProjects);
                    column.Bound(user => user.NumberOfErrors);
                    column.Bound(user => user.ActivityDate);
                    column.Bound(user => user.LastAction);
                }
            )
            .Sortable()
            .Pageable()
            .DataSource(datasource => datasource
                .Server()
                .PageSize(15)
            ).Render();        
    }
</div>
